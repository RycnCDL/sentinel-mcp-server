{
  "mcpServers": {
    "sentinel-mcp-server": {
      "command": "python",
      "args": ["-m", "src"],
      "cwd": "${workspaceFolder}",
      "env": {
        "AZURE_TENANT_ID": "${env:AZURE_TENANT_ID}",
        "AZURE_CLIENT_ID": "${env:AZURE_CLIENT_ID}",
        "AZURE_CLIENT_SECRET": "${env:AZURE_CLIENT_SECRET}",
        "AZURE_SUBSCRIPTION_ID": "${env:AZURE_SUBSCRIPTION_ID}",
        "SENTINEL_MANAGER_SCRIPT": "${env:SENTINEL_MANAGER_SCRIPT}",
        "LOG_LEVEL": "INFO",
        "LOG_FORMAT": "json",
        "DEBUG_MODE": "false"
      }
    }
  }
}
